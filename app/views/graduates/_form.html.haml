= nested_form_for [@graduate] do |f|
  = f.label :first_name
  = f.text_field :first_name
  %br/
  = f.label :last_name
  = f.text_field :last_name
  %br/
  = f.label :grad_city
  = f.text_field :grad_city
  %br/
  = f.label :grad_state
  = f.text_field :grad_state
  %br/
  = f.label :grad_focus
  = f.text_field :grad_focus
  %br/
  = f.label :grad_date
  = f.text_field :grad_date
  %br/
  = f.label :current_city
  = f.text_field :current_city
  %br/
  = f.label :current_state
  = f.text_field :current_state
  %br/
  = f.label :additional_info
  = f.text_area :additional_info
  %br/
  = f.label :image_url
  = f.text_field :image_url
  %br/
  = f.fields_for :links do |link_form|
    = link_form.label :url
    = link_form.text_field :url
    %br/
    = link_form.label :description
    = link_form.text_area :description
    %br/
    = link_form.link_to_remove "Remove"
    %br/
  = f.link_to_add "Add a link", :links
  %br/
  = f.fields_for :experiences do |exp_form|
    = exp_form.label :company
    = exp_form.text_field :company
    %br/
    = exp_form.label :position
    = exp_form.text_field :position
    %br/
    = exp_form.label :description
    = exp_form.text_area :description
    %br/
    = exp_form.link_to_remove "Remove"
    %br/
  = f.link_to_add "Add an experience", :experiences
  %br/
  = f.fields_for :educations do |edu_form|
    = edu_form.label :school_name
    = edu_form.text_field :school_name
    %br/
    = edu_form.label :start_date
    = edu_form.text_field :start_date
    %br/
    = edu_form.label :end_date
    = edu_form.text_field :end_date
    %br/
    = edu_form.label :concentration
    = edu_form.text_field :concentration
    %br/
    = edu_form.link_to_remove "Remove"
    %br/
  = f.link_to_add "Add an education", :educations
  %br/
  = f.submit












